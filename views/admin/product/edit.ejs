<% include ../layout/header.ejs %>
<!-- END TOPBAR -->
<!-- START CONTAINER -->
<div class="page-container row-fluid container-fluid">
    <!-- SIDEBAR - START -->

    <% include ../layout/menu.ejs %>

    <!--  SIDEBAR - END -->
    <!-- START CONTENT -->
    <section id="main-content" class=" ">
        <section class="wrapper main-wrapper row" style=''>
            <div class='col-xs-12'>
                <div class="page-title">
                    <div class="pull-left">
                        <h1 class="title">Sửa Sản Phẩm</h1>
                    </div>
                    <div class="pull-right hidden-xs">

                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
            <div class="col-xs-12">
                <section class="box ">
                    <div class="content-body">
                        <div class="row">
                            <% if(success_msg != ''){ %>
                                <div class="alert alert-success"><%= success_msg %></div>
                            <% } %>
                            <% if(errors) { %>
                                <div class="alert alert-danger">
                                    <% errors.forEach(function(e){ %>

                                        <%= e.msg %> <br/>
                                    <% }); %>

                                </div>
                            <% }; %>
                            <form action="" method="post" enctype="multipart/form-data">
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Mã</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="text" id="productId" value="<%= product.productId %>"
                                                   class="form-control" name="productId" required="required">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Tên sản phẩm</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="text" id="name" value="<%= product.name %>"
                                                   class="form-control" name="name" required="required">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Hình ảnh</label>
                                        <span class="desc"></span><br/>
                                        <img src="upload/<%= product.img %>" width="200px">
                                        <div class="controls">
                                            <input type="file" id="hinh" class="form-control" name="hinh">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Giá</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="number" id="price" value="<%= product.price %>" min="0"
                                                   class="form-control" name="price">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Số lượng</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <input type="number" id="quantity" value="<%= product.quantity %>" min="0"
                                                   class="form-control" name="quantity">
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Loại sản phẩm</label>
                                        <span class="desc"></span>
                                        <div class="controls">
                                            <select class="form-control" id="cate" name="cate">
                                                <option value="VN" <%= ('VN' == product.cate) ? 'selected=\"selected\"' : '' %> >
                                                    Việt Nam
                                                </option>
                                                <option value="TQ" <%= ('TQ' == product.cate) ? 'selected=\"selected\"' : '' %> >
                                                    Trung Quốc
                                                </option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="form-group">
                                        <label class="form-label" for="field-120334">Chi Tiết Sản Phẩm</label>
                                        <span class="description"></span>
                                        <div class="controls">
                                            <textarea name="description" id="description" class="form-control autogrow"
                                                      cols="5"><%= product.des %></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-sm-9 col-md-8 padding-bottom-30">
                                    <div class="text-left">
                                        <button type="submit" class="btn btn-primary">Lưu</button>
                                        <button type="button" class="btn">Huỷ</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </section>
    </section>
    <!-- END CONTENT -->
    <div class="chatapi-windows ">
    </div>
    <% include ../layout/footer.ejs %>
